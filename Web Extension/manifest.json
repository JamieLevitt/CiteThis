{
  "manifest_version": 3,
  "name": "CiteThis",
  "version": "1",
  "description": "Finds trending topics & related info to an X post.",
  "content_scripts": [
    {
      "matches": ["https://x.com/*/status/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
